---
import Layout from "@/layouts/Layout.astro";
import { AnimatedLinkButton } from "@/components/projects/buttons";

interface Props {
  title: string;
  href?: string;
  pTitle?: string;
  pSubtitle?: string;
}

const { title, href, pTitle, pSubtitle } = Astro.props;
---

<Layout title={title}>
  <section class="max-w-2xl mx-auto w-full flex flex-row justify-between items-center pt-3 pb-4">
    <AnimatedLinkButton label="go back" href={href || "/"} direction="bkwd" />

    <div class="pr-8 flex flex-col gap-1 text-right">
      <h1 class="text-3xl">{pTitle}</h1>
      <span class="text-white/80">{pSubtitle}</span>
    </div>
  </section>

  <slot />
</Layout>
